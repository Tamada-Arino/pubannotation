<%= form_for(@documentation) do |f| %>
	<%= errors_helper(@documentation) %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </div>
  <div class="field">
    <%= f.label :documentation_category_id -%>
    <%= f.collection_select :documentation_category_id, DocumentationCategory.all, :id, :name -%>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
