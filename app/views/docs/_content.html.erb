<h1><%= t('views.docs.document_content') %></h1>

<table>
<tr><th style="text-align:left">
	<% if @doc.sourcedb.present? -%>
		<%= @doc.sourcedb %>:<a href="<%= @doc.source %>"><%= @doc.sourceid %></a>
	<% else -%>
		<%= "Doc :#{@doc.id}" -%>
	<% end -%>
	<% if @doc.sourcedb == 'PMC' %>
	(<%= @doc.serial %> - <%= @doc.section %>)
	<% end %>
</th></tr>
<tr><td class="text"><%= raw @text.gsub(/\n/, "<br>") if @text.present? %></td><tr>
</table>