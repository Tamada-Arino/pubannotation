{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["sourcedb", "sourceid", "text"],
  "properties": {
    "target": { "type": "string", "description": "The target URL of the document" },
    "sourcedb": { "type": "string", "description": "Document source database" },
    "sourceid": { "type": "string", "description": "Document source ID" },
    "text": { "type": "string", "description": "Document text" },
    "project": { "type": "string", "description": "Project name" },
    "denotations": { "$ref": "#/definitions/denotations" },
    "attributes": { "$ref": "#/definitions/attributes" },
    "relations": { "$ref": "#/definitions/relations" },
    "blocks": { "$ref": "#/definitions/blocks" },
    "typesettings": { "$ref": "#/definitions/typesettings" },
    "config": { "$ref": "#/definitions/config" },
    "project_id": { "type": "string", "description": "Project ID" },
    "annotation": {
      "type": "object",
      "required": ["sourcedb", "sourceid", "text"],
      "properties": {
        "target": { "type": "string", "description": "The target URL of the document" },
        "sourcedb": { "type": "string", "description": "Document source database" },
        "sourceid": { "type": "string", "description": "Document source ID" },
        "text": { "type": "string", "description": "Document text" },
        "project": { "type": "string", "description": "Project name" },
        "denotations": { "$ref": "#/definitions/denotations" },
        "attributes": { "$ref": "#/definitions/attributes" },
        "relations": { "$ref": "#/definitions/relations" },
        "blocks": { "$ref": "#/definitions/blocks" },
        "typesettings": { "$ref": "#/definitions/typesettings" },
        "config": { "$ref": "#/definitions/config" }
      }
    }
  },
  "definitions": {
    "span": {
      "type": "object",
      "properties": {
        "begin": { "type": "integer" },
        "end": { "type": "integer" }
      }
    },
    "denotations": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "span": { "$ref": "#/definitions/span" },
          "obj": { "type": ["string", "null"] }
        }
      }
    },
    "attributes": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "pred": { "type": "string" },
          "subj": { "type": "string" },
          "obj": { "type": ["string", "number", "boolean"] }
        }
      }
    },
    "relations": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "pred": { "type": "string" },
          "subj": { "type": "string" },
          "obj": { "type": "string" }
        }
      }
    },
    "blocks": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "span": { "$ref": "#/definitions/span" },
          "obj": { "type": "string" }
        }
      }
    },
    "typesettings": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "span": { "$ref": "#/definitions/span" },
          "style": { "type": "string" }
        }
      }
    },
    "config": {
      "type": "object",
      "properties": {
        "autocompletion_ws": { "type": "string" },
        "autosave": { "type": "boolean" },
        "autolineheight": { "type": "boolean" },
        "boundarydetection": { "type": "boolean" },
        "entity types": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "color": { "type": "string" },
              "label": { "type": "string" },
              "default": { "type": "boolean" }
            }
          }
        },
        "block types": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "color": { "type": "string" },
              "label": { "type": "string" },
              "default": { "type": "boolean" }
            }
          }
        },
        "relation types": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "color": { "type": "string" }
            }
          }
        },
        "attribute types": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "pred": { "type": "string" },
              "value type": { "type": "string" },
              "default": { "type": "number" },
              "min": { "type": "number" },
              "max": { "type": "number" },
              "step": { "type": "number" },
              "color": { "type": "string" },
              "label": { "type": "string" },
              "values": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "id": { "type": "string" },
                    "range": { "type": "string" },
                    "pattern": { "type": "string" },
                    "color": { "type": "string" },
                    "label": { "type": "string" }
                  }
                }
              },
              "media height": { "type": "number" }
            }
          }
        }
      }
    }
  }
}
