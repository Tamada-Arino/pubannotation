{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["text"],
  "properties": {
    "target": { "type": "string", "description": "The target URL of the document" },
    "sourcedb": { "type": "string", "description": "Document source database" },
    "sourceid": { "type": "string", "description": "Document source ID" },
    "text": { "type": "string", "description": "Document text" },
    "project": { "type": "string", "description": "Project name" },
    "denotations": { "type": "array", "items": { "$ref": "#/definitions/denotation" } },
    "attributes": { "type": "array", "items": { "$ref": "#/definitions/attribute" } },
    "relations": { "type": "array", "items": { "$ref": "#/definitions/relation" } },
    "blocks": { "type": "array", "items": { "$ref": "#/definitions/block" } },
    "typesettings": { "type": "array", "items": { "$ref": "#/definitions/typesetting" } },
    "config": { "type": "object" },
    "project_id": { "type": "string", "description": "Project ID" },
    "annotation": {
      "type": "object",
      "required": ["text"],
      "properties": {
        "target": { "type": "string", "description": "The target URL of the document" },
        "sourcedb": { "type": "string", "description": "Document source database" },
        "sourceid": { "type": "string", "description": "Document source ID" },
        "text": { "type": "string", "description": "Document text" },
        "project": { "type": "string", "description": "Project name" },
        "denotations": { "type": "array", "items": { "$ref": "#/definitions/denotation" } },
        "attributes": { "type": "array", "items": { "$ref": "#/definitions/attribute" } },
        "relations": { "type": "array", "items": { "$ref": "#/definitions/relation" } },
        "blocks": { "type": "array", "items": { "$ref": "#/definitions/block" } },
        "typesettings": { "type": "array", "items": { "$ref": "#/definitions/typesetting" } },
        "config": { "type": "object" }
      }
    }
  },
  "definitions": {
    "span": {
      "type": "object",
      "properties": {
        "begin": { "type": "integer" },
        "end": { "type": "integer" }
      }
    },
    "denotation": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "span": { "$ref": "#/definitions/span" },
        "obj": { "type": ["string", "null"] }
      }
    },
    "attribute": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "pred": { "type": "string" },
        "subj": { "type": "string" },
        "obj": { "type": ["string", "number", "boolean"] }
      }
    },
    "relation": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "pred": { "type": "string" },
        "subj": { "type": "string" },
        "obj": { "type": "string" }
      }
    },
    "block": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "span": { "$ref": "#/definitions/span" },
        "obj": { "type": "string" }
      }
    },
    "typesetting": {
      "type": "object",
      "properties": {
        "span": { "$ref": "#/definitions/span" },
        "style": { "type": "string" }
      }
    }
  }
}
