<!DOCTYPE html>
<html>
	<head>
	  <title><%= t('views.service.title') -%></title>
	  <link rel="stylesheet" href="http://code.jquery.com/ui/1.10.3/themes/smoothness/jquery-ui.css" />
	  <%= stylesheet_link_tag    "application", :media => "all" -%>
	  <%= javascript_include_tag "application" -%>
	  <%= javascript_include_tag "http://code.jquery.com/ui/1.10.3/jquery-ui.min.js" -%>
	  <%= yield :javascript -%>
	  <%= csrf_meta_tags -%>
	</head>
	
	<body>
		<div id="top-ribbon">
			<div class="left">
				<div id="path">
					<%= yield :path -%>
				</div>
			</div>
			<div class="right menu">
				<div id="language">
					<%= language_switch_helper.html_safe %>
				</div>

				<div id="account menu">
					<ul>
						<li><%= render 'devise/menu/registration_items' %></li>
						<li><%= render 'devise/menu/login_items' %></li>
					</ul>
				</div>
			</div>
		</div>
		<div id="notice">
			<%= notice -%>
			<%= alert -%>
		</div>
		
		<div id="main">
			<%= yield -%>
		</div>
		<div id="footer">
			<div class='credit'>
				<%= t('views.service.credit').html_safe -%>
			</div>
		</div>
		<div id='Indicator'></div>
	</body>
</html>
