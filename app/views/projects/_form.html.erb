      <%= text_field_tag 'project[namespaces][][uri]', @project.base_uri, :class => "input" -%>
      <%= namespaces_prefix_input_fields -%>
      <span id="namespaces_inputs"></span>
      <br />
      <span id="add_namespaces_input" class="button">ADD</span>
