<% if user_signed_in? -%>
	<% if current_user.root? -%>
		<%= link_to current_user.username + "(R)", show_user_path(current_user.username) %>
	<% else -%>
		<%= link_to current_user.username, show_user_path(current_user.username) %>
	<% end -%>
<% else -%>
	<%= link_to t('views.users.sign_up'), new_user_registration_path, :class => 'capitalize_first' %>
<% end -%>
