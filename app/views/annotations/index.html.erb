<h1>Annotations</h1>

<!--p>to <= @spans.first.doc_sourcedb %>:<= @spans.first.doc_sourceid %></p-->

<% if @spans and !@spans.empty? %>
  <h2>Caterogy annotations</h2>
  <table class="ann">
    <tr>
      <th>Id</th>
      <th>Span (begin:end)</th>
      <th>Category</th>
    </tr>

  <% @spans.each do |span| %>
    <tr>
      <td><%= span[:id] %></td>
      <td>
        <% unless span[:span].respond_to?(:keys) %>
          <% span[:span].each_with_index do |s, i| %><% unless i == 0 %>,<% end %><%= s[:begin] %>:<%= s[:end] %><% end %>
        <% else %>
          <%= span[:span][:begin] %>:<%= span[:span][:end] %>
        <% end %>
      </td>
      <td><%= span[:category] %></td>
      <td style="text-align:left; font-style:italic; color:#888888; border-color:white"><%= @text[span[:span][:begin]...span[:span][:end]] %></td>
    </tr>
  <% end %>
  </table>
<% end %>


<% if @instances and !@instances.empty? %>
  <h2>Instance annotations</h2>
  <table class="ann">
    <tr>
      <th>Id</th>
      <th>Ins. type</th>
      <th>Ins. object</th>
    </tr>

  <% @instances.each do |instance| %>
    <tr>
      <td><%= instance[:id] %></td>
      <td><%= instance[:type] %></td>
      <td><%= instance[:object] %></td>
    </tr>
  <% end %>
  </table>
<% end %>


<% if @relations and !@relations.empty? %>
  <h2>Relation annotations</h2>
  <table class="ann">
    <tr>
      <th>Id</th>
      <th>Relation type</th>
      <th>Subject</th>
      <th>Object</th>
    </tr>

  <% @relations.each do |relation| %>
    <tr>
      <td><%= relation[:id] %></td>
      <td><%= relation[:type] %></td>
      <td><%= relation[:subject] %></td>
      <td><%= relation[:object] %></td>
    </tr>
  <% end %>
  </table>
<% end %>

<% if @modifications and !@modifications.empty? %>
  <h2>Modification annotations</h2>
  <table class="ann">
    <tr>
      <th>Id</th>
      <th>Mod. type</th>
      <th>Mod. object</th>
    </tr>

  <% @modifications.each do |modification| %>
    <tr>
      <td><%= modification[:id] %></td>
      <td><%= modification[:type] %></td>
      <td><%= modification[:object] %></td>
    </tr>
  <% end %>
  </table>
<% end %>

<% if (!@spans or @spans.empty?) and (!@instances or @instances.empty?) and (!@relations or @relations.empty?) and (!@modifications or @modifications.empty?) %>
<p>none</p>
<% end %>