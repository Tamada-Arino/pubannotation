<h1>
  <% if scope.present? -%>
    <%= t("views.projects.#{scope}").html_safe -%>
  <% else -%>
    <% if @doc %>
      <% if @doc.has_divs? %>
        <%= t('views.projects.that_annotate_a_division', :href => projects_path, :serial => @doc.serial, :sourcedb => @doc.sourcedb, :sourceid => @doc.sourceid).html_safe %>
      <% else %>
        <%= t('views.projects.that_annotate_a_doc', :href => projects_path, :sourcedb => @doc.sourcedb, :sourceid => @doc.sourceid).html_safe %>
      <% end %>
	  <% else %>
    	<%= t('views.projects.in_pubannotation').html_safe %>
    	<% new_path = new_project_path -%>
	    <% if params[:action] == 'index' -%>
		    <% if user_signed_in?%>
		      	<span class="button"><%= link_to t('views.shared.create_model', :model => t("activerecord.models.project")), new_path %></span>
		    <% else %>
			    <span class="button"><%= link_to t('views.users.sign_in_to_create_model', :model => t('activerecord.models.project')), new_user_session_path %></span>
		    <% end %>
	    <% end %>
	  <% end %>
  <% end %>
</h1>

<% if projects.blank? %>
  <p>none</p>
<% else %>
  <table class="full">
    <tr>
      <% if @annotations_projects_check -%>
        <th style="width:1.7em"></th>
      <% end -%>
      <th style="width:14em"><%= sortable(Project, 'name', t('activerecord.attributes.project.name')) %></th>
      <th><%= t('activerecord.attributes.project.description') %></th>
      <th style="width:8em"><%= sortable(Project, 'author', t('activerecord.attributes.project.author')) %></th>
      <th style="width:8em"><%= sortable(Project, 'users.username', t('activerecord.attributes.project.maintainer')) -%></th>
<!-- 
      <th title='Association'><%= link_to_unless_current 'A', url_for(:only_path => true, :projects_order => 'association'), :class => 'sortable-a' %></th>
      <th style="width:1em" title='PubMed abstracts'><%= link_to_unless_current 'P', url_for(:only_path => true, :projects_order => 'pmdocs_count'), :class => 'sortable-a' %></th>
      <th style="width:1em" title='PubMed Central documents'><%= link_to_unless_current 'C', url_for(:only_path => true, :projects_order => 'pmcdocs_count'), :class => 'sortable-a' %></th>
      <th style="width:1em" title="<%= t('activerecord.models.denotations') %>"><%= link_to_unless_current 'D', url_for(:only_path => true, :projects_order => 'denotations_count'), :class => 'sortable-a' %></th>
      <th style="width:1em" title="<%= t('activerecord.models.relations') %>"><%= link_to_unless_current 'R', url_for(:only_path => true, :projects_order => 'relations_count'), :class => 'sortable-a' %></th>
 -->
      <th style="width:8em"><%= sortable(Project, 'status', t('activerecord.attributes.project.status')) -%></th>
      <th style="width:4em"></th>
    </tr>

  <% projects.each do |project| %>
    <% project_path = project_path(project.name) -%>
    <% type = 'P' -%>
    <tr>
      <% if @annotations_projects_check -%>
        <td><%= check_box_tag "annotations_projects_check", project.name, false, {id: "project_for_annotations_#{project.id}", class: 'annotations_projects_check'} -%></td>
      <% end -%>
      <td><%= project.name %></td>
      <td title="<%= project.description -%>"><%= project.description %></td>
      <td><%= project.author %></td>
      <td><%= project.user.username %></td>
<!-- 
      <td><%= project.association_for(current_user) -%></td>
      <td style="text-align:right"><%= project.pmdocs_count -%></td>
      <td style="text-align:right"><%= project.pmcdocs_count -%></td>
      <td style="text-align:right"><%= denotations_count_helper(project, {:doc => doc}) %></td>
      <td style="text-align:right"><%= relations_count_helper(project, {:doc => doc}) %></td>
      <td><%= project.associate_projects.size -%></td>
 -->
      <td><%= project.status_text -%></td>
      <td>
	      <% if @doc and @doc.sourcedb and @doc.sourceid %>
          <% if @doc.has_divs? %>
            <%= link_to t('views.shared.show'), show_project_sourcedb_sourceid_divs_docs_path(project.name, @doc.sourcedb, @doc.sourceid, @doc.serial), class: 'button' %>
          <% else %>
            <%= link_to t('views.shared.show'), show_project_sourcedb_sourceid_docs_path(project.name, @doc.sourcedb, @doc.sourceid), class: 'button' %>
          <% end %>
	      <% else %>
	        <%= link_to t('views.shared.show'), project_path(project.name), class: 'button' %>
	      <% end %>
      </td>
    </tr>
  <% end %>
  </table>
<% end %>
