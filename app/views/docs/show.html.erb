<%= render :partial => 'docs/path'-%>

<%= render :partial => 'docs/content'-%>

<% if @project.present? -%>

	<%= render :partial => 'annotations/summary_and_view_options'-%>

	<% if user_signed_in? and current_user == @project.user %>
		<%= render :partial => 'annotations/get_annotation'-%>
	<% end %>

<% else %>
	<%= render :partial => "projects/list", :locals => {:doc => @doc, :projects => @projects, :scope => nil } %>
<% end %>

<% if params[:div_id] -%>
  <%= link_to t('views.shared.annotations'), doc_sourcedb_sourceid_divs_annotations_path(@doc.sourcedb, @doc.sourceid, @doc.serial), class: 'button' -%>
<% else %>
  <%= link_to t('views.shared.annotations'), doc_sourcedb_sourceid_annotations_path(@doc.sourcedb, @doc.sourceid), class: 'button' -%>
<% end %>

