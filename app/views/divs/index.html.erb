<% content_for :path do %>
	> <%= link_to t('views.paths.home'), home_path %>
	<% if @project %>
		> <%= link_to t('activerecord.models.project').pluralize, projects_path %>
		> <%= link_to @project.name, project_path(@project.name) %>
		> <%= link_to 'docs', project_docs_path(@project.name) -%>
	<% end %>
	> <%= t('views.shared.a_doc_id', :sourcedb => @divs.first.sourcedb, :sourceid => @divs.first.sourceid) %>
<% end %>

<h1>
	<%= t('views.divs.document_divs', :sourcedb => @divs.first.sourcedb, :sourceid => @divs.first.sourceid).html_safe %>
</h1>

<!-- tablesorter js -->
<% content_for :javascript do %>
	<script type="text/javascript">
		$(document).ready(function() 
		    { 
		        $("#divisions").tablesorter({
		        	sortInitialOrder: 'desc',
		        	// set sortable headers
		        	headers: { 
			            0: { sorter: false }, 
			            1: { sorter: false }, 
			            3: { sorter: false }, 
			            4: { sorter: false }, 
			            5: { sorter: false },
			            8: { sorter: false }
			        }
		        });
		    } 
		); 	
	</script>
<% end %>

<table id="divisions" class="tablesorter full">
	<thead>
		<tr>
			<th style="width:6em"><%= t('activerecord.attributes.doc.sourcedb')%></th>
			<th style="width:6em"><%= t('activerecord.attributes.doc.sourceid')%></th>
			<th style="width:4em" class="sortable-ASC"><%= t('views.divs.div')%></th>
			<th style="width:14em"><%= t('activerecord.attributes.doc.section') %></th>
			<th><%= t('activerecord.attributes.doc.body') %></th>
			<th style="width:9em"><%= t('views.shared.size') %></th>
			<th style="width:9em" class="sortable-ASC" title="<%= t('activerecord.models.denotations') %>">#Denotations</th>
			<th style="width:4em"></th>
		</tr>
	</thead>

	<tbody>
		<% @divs.each_with_index do |div, i| %>
			<tr>
			    <td style="text-align:center"><%= div.sourcedb %></td>
			    <td style="text-align:center"><a href="<%= div.source %>"><%= div.sourceid %></a></td>
			    <td style="text-align:center"><%= div.serial %></td>
			    <td style="text-align:center"><%= div.section %></td>
			    <td style="text-align:left"><%= div.body %></td>
			    <td style="text-align:right"><%= div.body.length %></td>
			    <td style="text-align:right"><%= div.get_denotations_count(@project) %></td>
		    	<td><span class="button"><%= div_link_helper(@project, div) -%></span></td>
		    </tr>
		<% end %>
	</tbody>
</table>
