<h1>Submit raw SQL</h1>	

<%= form_tag spans_sql_path, :method => 'get' do -%>
	<%= text_field_tag :sql, params[:sql] -%>
	<%= submit_tag 'Submit' -%>
<% end -%>

<% if @results.present? -%>
	<table style="margin-bottom: 1em">
		<tr>
			<th>begin</th>
			<th>end</th>
			<th></th>
		</tr>
		<% @results.each do |result| -%>
			<% result = result.select{|key, value| key.class == String} -%>
			<tr>
				<td>
					<%= result['begin'] -%>
				</td>
				<td>
					<%= result['end'] -%>
				</td>
				<td>
					<%= link_to 'show', doc_redirect_to_spans_path(result['doc_id'], result['begin'], result['end'])-%>
				</td>
			</tr>
		<% end -%>
	</table>
<% end -%>
<%= will_paginate @results if @results -%>
