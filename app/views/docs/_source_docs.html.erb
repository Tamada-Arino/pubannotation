<h1>
	<% @docs_path = @project.present? ? project_docs_path(@project.name) : docs_path -%>
	<%= link_to t('views.docs.list').capitalize, @docs_path -%>
	<span class='info'>
		(<%= number_with_delimiter(@search_count, :delimiter => ',') + '/' if @search_count.present? -%><%= cache(docs_count_cache_key) do %><%= docs_count %><% end -%>)
	</span>
	<span class='tab-bar'>
		<%= link_to 'JSON', params.merge(format: :json), class: 'tab', title: "To get the whole list (up to 1,000 items) in JSON" -%>
		<%= link_to 'TSV', params.merge(format: :tsv), class: 'tab', title: "To get the whole list (up to 1,000 items) in TSV (Tab-separated values)" -%>
	</span>
	<%= render partial: 'docs/search_form' -%>
	<% if @search_count.nil? && docs_count.to_i < 100000 %>
		<span class='option'>
			<% if params[:randomize] == 'true' %>
				<% params.delete(:randomize) %>
				<%= link_to content_tag(:i, '', class: "fa fa-random", "aria-hidden" => "true"), params, class: 'pushdown-button pressed', title: "randomize the order (only for projects with <0.1M documents)" -%>
			<% else %>
				<a href=<%= params %>YYY</a>
				<%= link_to content_tag(:i, '', class: "fa fa-random", "aria-hidden" => "true"), params.merge(randomize: true), class: 'pushdown-button', title: "randomize the order (only for projects with <0.1M documents)" -%>
			<% end %>
		</span>
	<% end %>
</h1>

<table class="full">
<colgroup>
	<col class="docs_col_sourcedb">
	<col class="docs_col_sourceid">
	<col class="docs_col_text show-when-wide">
	<col class="docs_col_length">
	<col class="docs_col_projects_number">
	<col class="docs_col_annotations_number">
	<col class="docs_col_button">
	<% if @project.present? && @project.editable?(current_user) %>
		<col class="docs_col_button">
	<% end -%>
</colgroup>
<tr>
	<th>
		<%= t('activerecord.attributes.doc.sourcedb') -%>
	</th>
	<th>
		<%= t('activerecord.attributes.doc.sourceid') %>
	</th>
	<th class="show-when-wide">
		<%= t('activerecord.attributes.doc.body') %>
	</th>
	<th>
		<%= t('views.shared.length') %>
	</th>
	<th>
		<span title="number of projects">
			<% if params[:keywords].present? -%>
				<%= t('views.shared.projects_count') -%>
			<% else -%>
				<%= sortable(Doc, t('views.shared.projects_count'), 'projects_num') -%>
			<% end -%>
		</span>
	</th>
	<th>
		<span title= "number of denotations">
			<% if params[:keywords].present? -%>
				<%= t('views.shared.annotations_count') -%>
			<% else -%>
				<% if  params[:project_id].present? -%>
					<%= sortable(Doc, t('views.shared.annotations_count'), 'project_docs.denotations_num') -%>
				<% else %>
					<%= sortable(Doc, t('views.shared.annotations_count'), 'denotations_num') -%>
				<% end %>
			<% end -%>
		</span>
	</th>
	<th></th>
	<% if @project.present? && @project.editable?(current_user) %>
		<th></th>
	<% end -%>
</tr>

<%= render partial: 'source_doc', collection: @docs -%>

</table>
<%= simple_paginate -%>
