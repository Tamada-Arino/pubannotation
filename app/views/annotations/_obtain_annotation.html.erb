<h2>
<%= t('views.docs.automatic_annotation') %>
<a href="http://www.pubannotation.org/docs/obtain-annotation/">
<%= image_tag("hint.png",
      :size => "16x16",
      :title => "click for help") %>
</a>
</h2>

<%= form_tag annotations_obtain_path, :method => "get" do %>
   	<table style="border-color:#FFFFFF; margin-left:20px">
   		<tr>
	   		<th>Choose a predefined annotator</th>
	   		<td>
				<%= select_tag(:annotator, options_for_select(@annotator_options), prompt: 'choose one') %>
			</td>
		</tr>

		<tr>
			<th>... or, define one</th>
			<td>

		   	<table>
				<tr>
					<th title="Specify a short (unique) identifier of the annotations to avoid confliction with other existing annotations.">Identifier</th>
			   		<td style="text-align:center">
						<%= text_field_tag :abbrev, nil, placeholder: "a short unique character string", size: 30 %>
					</td>
				</tr>

		   		<tr>
			   		<th>URL</th>
			   		<td style="text-align:center">
						<%= text_field_tag :url, nil, placeholder: "URL of annotation server", size: 30 %>
					</td>
				</tr>

				<tr>
					<th>Method</th>
					<td>
					    <%= radio_button_tag :method, 0 %>
						<%= label_tag :method_0, :GET, value: 0 %>
					    <%= radio_button_tag :method, 1, checked: true %>
					    <%= label_tag :method_1, :POST, value: 1 %>
					</td>
				</tr>

			</table>
			
		</td></tr>

		<tr>
			<th>
				Clear existing annotations?
			</th>
			<td>
				<%= radio_button_tag :mode, :replace %>
				<%= label_tag :mode_replace, :Yes, value: :replace %>
			    <%= radio_button_tag :mode, :add, checked: true %>
			    <%= label_tag :mode_add, :No, value: :add %>
			</td>
		</tr>
		<tr>
			<th colspan="2">
				<%= submit_tag('Request annotation') %>
			</th>
		</tr>
	</table>
<% end %>

