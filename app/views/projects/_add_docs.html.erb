<%= form_tag(add_project_docs_path(@project.name), :method => "post") do %>
	<%= select_tag :sourcedb, options_for_select(@sourcedbs_active),
		style: "width:7em" -%>
	<%= text_field_tag :ids, nil,
		style: "width:7em", :placeholder => t('activerecord.placeholders.doc.ids'), :required => true %>
	<%= submit_tag t('views.shared.add'), class: :button %>
<% end %>
