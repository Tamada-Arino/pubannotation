<h3>Batch upload</h3>

<%= form_tag project_create_annotations_from_zip_path(@project.name), multipart: true do -%>
	<label for="zipfile">Upload a zip file containing annotation json files:</label>
	<ol>
	<li><%= file_field_tag 'zipfile', accept: 'application/zip', required: true -%></li>
	<li>Choose Mode:
		<input type="radio" name="mode" value="replace" checked="checked">replace</input>
		<input type="radio" name="mode" value="add">addition</input>
	</li>
	<li><%= submit_tag t('views.shared.upload') -%></li>
	</ol>
<% end -%>
