<% if @annotations[:denotations].present? -%>
	<%= render :partial => 'denotations/denotation', :collection => @annotations[:denotations], :locals => {:project => @project} -%>
<% else -%>
	<%= t('controllers.shared.not_exists', :model => t('views.shared.annotation')) %>
<% end -%>

<% if @annotations[:relations].present? %>
  <h2>Relations</h2>
  <table class="ann">
    <tr>
      <th>Id</th>
      <th>Predicate</th>
      <th>Subject</th>
      <th>Object</th>
    </tr>

  <% @annotations[:relations].each do |relation| %>
    <tr>
      <td><%= relation[:id] %></td>
      <td><%= relation[:pred] %></td>
      <td><%= relation[:subj] %></td>
      <td><%= relation[:obj] %></td>
    </tr>
  <% end %>
  </table>
<% end %>

<% if @annotations[:modifications].present? %>
  <h2>Modifications</h2>
  <table class="ann">
    <tr>
      <th>Id</th>
      <th>Predicate</th>
      <th>Object</th>
    </tr>

  <% @annotations[:modifications].each do |modification| %>
    <tr>
      <td><%= modification[:id] %></td>
      <td><%= modification[:pred] %></td>
      <td><%= modification[:obj] %></td>
    </tr>
  <% end %>
  </table>
<% end %>
