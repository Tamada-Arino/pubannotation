<%= form_for(@annset) do |f| %>
  <% if @annset.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@annset.errors.count, "error") %> prohibited this annset from being saved:</h2>

      <ul>
      <% @annset.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<table>
  <tr>
    <th><%= f.label :name %></th>
    <td><%= f.text_field :name %></td>
  </tr>
  <tr>
    <th><%= f.label :description %></th>
    <td><%= f.text_area :description, :rows => 5 %></td>
  </tr>
  <tr>
    <th><%= f.label :author %></th>
    <td><%= f.text_field :author %></td>
  </tr>
  <tr>
    <th><%= f.label :license %></th>
    <td><%= f.text_field :license %></td>
  </tr>
  <tr>
    <th><%= f.label :status %></th>
    <td><%= f.select :status, options_for_select([['Released', 1],['Beta', 2], ['Developing', 3]], f.object.status) %></td>
  </tr>
  <tr>
    <th><%= f.label :accessibility %></th>
    <td><%= f.select :accessibility, options_for_select([['Public', 1],['Private', 2]], f.object.accessibility) %></td>
  </tr>
  <tr>
    <th><%= f.label :uploader %></th>
    <td><%= current_user.username %></td>
  </tr>
  <tr>
    <th><%= f.label :reference %></th>
    <td><%= f.text_field :reference, :placeholder => 'URL' %></td>
  </tr>
  <tr>
    <th><%= f.label :viewer %></th>
    <td><%= f.text_field :viewer, :placeholder => 'URL' %></td>
  </tr>
  <tr>
    <th><%= f.label :editor %></th>
    <td><%= f.text_field :editor, :placeholder => 'URL' %></td>
  </tr>
  <tr>
    <th><%= f.label :RDF_Writer %></th>
    <td><%= f.text_field :rdfwriter, :placeholder => 'URL' %></td>
  </tr>
  <tr>
    <th><%= f.label 'XML writer' %></th>
    <td><%= f.text_field :xmlwriter, :placeholder => 'URL' %></td>
  </tr>
  <tr>
    <th><%= f.label 'BioNLP-ST_writer' %></th>
    <td><%= f.text_field :bionlpwriter, :placeholder => 'URL' %></td>
  </tr>
  <tr>
    <th colspan="2"><%= f.submit %></th>
  </tr>
</table>
<% end %>
