<% content_for :path do %>
	> <%= link_to t('views.paths.home'), home_path %>
	<% if @doc and @doc.sourcedb == 'PubMed' %>
		> <%= link_to t('views.shared.pmdocs'), pmdocs_path %>
		> <%= link_to @doc.sourceid, pmdoc_path(@doc.sourceid) %>
	 	> <%= link_to "projects", pmdoc_projects_path(@doc.sourceid) %>
	<% elsif @doc and @doc.sourcedb == 'PMC' %>
		> <%= link_to t('views.shared.pmcdocs'), pmcdocs_path %>
		> <%= link_to @doc.sourceid, pmcdoc_path(@doc.sourceid) %>
		> <%= link_to t('views.shared.divs'),    pmcdoc_divs_path(@doc.sourceid) %>
		> <%= link_to @doc.serial,   pmcdoc_div_path(@doc.sourceid, @doc.serial) %>
	 	> <%= link_to "projects", pmcdoc_div_projects_path(@doc.sourceid, @doc.serial) %>
	<% else %>
 		> <%= link_to "projects", projects_path %>
 	<% end %>
 	> <%= @project.name %>
<% end %>

<h1><%= t('views.project.annotation_set_description') %></h1>

<% if @project %>
	<table>
	<tr>
	<th><%= t('activerecord.attributes.project.name') %></th>
	<td><%= @project.name %></td>
	</tr>
	<tr>
	<th><%= t('activerecord.attributes.project.description') %></th>
	<td><%= @project.description %></td>
	</tr>
	<tr>
	<th><%= t('activerecord.attributes.project.author') %></th>
	<td><%= @project.author %></td>
	</tr>
	<tr>
	<th><%= t('activerecord.attributes.project.license') %></th>
	<td><%= @project.license %></td>
	</tr>
	<tr>
	<th><%= t('activerecord.attributes.project.status') %></th>
	<td><%=
		case @project.status
		when 1 then t('activerecord.options.project.status.released')
		when 2 then t('activerecord.options.project.status.beta')
		when 3 then t('activerecord.options.project.status.developing')
		end
	%></td>
	</tr>
	<tr>
	<th><%= t('activerecord.attributes.project.accessibility') %></th>
	<td><%=
		case @project.accessibility
		when 1 then t('activerecord.options.project.accessibility.public')
		when 2 then :Private
		end
	%></td>
	</tr>
	<tr>
	<th><%= t('activerecord.attributes.project.uploader') %></th>
	<td><%= @project.user.username %></td>
	</tr>
	<tr>
	<th><%= t('activerecord.attributes.project.reference') %></th>
	<td><a href="<%= @project.reference %>"><%= @project.reference %></a></td>
	</tr>
	<th><%= t('activerecord.attributes.project.viewer') %></th>
	<td><a href="<%= @project.viewer %>"><%= @project.viewer %></a></td>
	</tr>
	<% if user_signed_in? and current_user == @project.user %>
		<tr>
			<th><%= t('activerecord.attributes.project.editor') %></th>
			<td><a href="<%= @project.editor %>"><%= @project.editor %></a></td>
		</tr>
	<% end %>
	<% unless @project.rdfwriter.empty? %>
		<tr>
			<th><%= t('activerecord.attributes.project.rdfwriter') %></th>
			<td><a href="<%= @project.rdfwriter %>"><%= @project.rdfwriter %></a></td>
		</tr>
	<% end %>
	<% unless @project.xmlwriter.empty? %>
		<tr>
			<th><%= t('activerecord.attributes.project.xmlwriter') %></th>
			<td><a href="<%= @project.xmlwriter %>"><%= @project.xmlwriter %></a></td>
		</tr>
	<% end %>
	<% unless @project.bionlpwriter.empty? %>
		<tr>
			<th><%= t('activerecord.attributes.project.bionlpwriter') %></th>
			<td><a href="<%= @project.bionlpwriter %>"><%= @project.bionlpwriter %></a></td>
		</tr>
	<% end %>
	</table>

	<% if user_signed_in? and current_user == @project.user %>
		<span class="button"><%= link_to 'Edit', edit_project_path(@project.name) %></span>
		<span class="button"><%= link_to 'Delete', @project.name, :method => :delete, :confirm => 'Are you sure? All the annotations that belong to this annotation set will be deleted.' %></span>
	<% end %>
	<% @doc = Doc.first %>
	<% if @doc %>
		<% if @doc.sourcedb == 'PubMed' %>
			<% annotation_url = pmdoc_project_annotations_url(@doc.sourceid, @project.name) %>
		<% else %>
			<% annotation_url = pmcdoc_div_project_annotations_url(@doc.sourceid, @doc.serial, @project.name) %>
		<% end %>

		<h2>
			<%= t('views.project.annotation_within_annotation_set', :sourcedb => @doc.sourcedb, :sourceid => @doc.sourceid).html_safe %>
		</h2>
		<%= render :partial => "annotations/options", :locals => {:project => @project, :annotation_url => annotation_url, :identifier => "#{@doc.sourcedb}-#{@doc.sourceid}-#{@doc.serial}-#{@doc.section}" } %>
	<% else %>
		<h2 class="capitalize_first">
			<%= t('views.project.documents_belongs_to_annsets', :content => t('activerecord.models.doc'), :pname => t('views.shared.annotation_sets'), :parent => '').html_safe %>
		</h2>
		<ul>
			<li><%= link_to "#{t('views.shared.pubmed')} #{t('activerecord.models.doc').pluralize}", project_pmdocs_url(@project.name) %> (<%= @pmdocs_num %>)</li>
			<li><%= link_to "PMC #{t('activerecord.models.doc').pluralize}", project_pmcdocs_url(@project.name) %> (<%= @pmcdocs_num %>)</li>
		</ul>
	<% end %>
<% end %>