<%= content_for :javascript do -%>
  <%= javascript_include_tag "docs" -%>
<% end -%>
<%= render :partial => 'docs/path'-%>
<section>
	<%= render :partial => 'docs/titlebar' -%>
	<%= render :partial => 'docs/content'-%>

	<section>
		<h2>
			Projects
			<span class='meta'>
				<% if @span.present? -%>
					that have annotations to this span
				<% else %>
					that include this document
				<% end %>
			</span>
		</h2>

    <!-- Select projects area start -->
    <div id="selected_projects_list">
      <span class="button" id="set_selected_projects" data-doc-id="<%= @doc.id -%>">Show projects</span>
    </div>
    <div id="unselected_projects_list">
      <%= render partial: "projects/name_list", collection: @projects -%>
    </div>
    <div id="projects"></div>
    <!-- Select projects area end -->

	</section>
	<section>
		<%= render :partial => 'annotations/titlebar' -%>
		<%= render :partial => 'annotations/summary' -%>
	</section>
</section>
