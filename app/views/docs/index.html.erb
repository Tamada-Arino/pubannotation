<h1>Documents</h1>

<table>
  <tr>
    <th>Source DB</th>
    <th>Source Id</th>
    <th>Division</th>
    <th>Section</th>
    <th>Text</th>
    <th></th>
  </tr>

<% @docs.each do |doc| %>
  <tr>
    <td><%= doc.sourcedb %></td>
    <td><a href="<%= doc.source %>"><%= doc.sourceid %></a></td>
    <td><%= doc.serial %></td>
    <td><%= doc.section %></td>
    <td class="text"><%= (doc.body.length < 64)? doc.body : doc.body[0, 62] + ' ...' %></td>
    <td><%= link_to 'Show', doc_path(doc.id) %></td>
  </tr>
<% end %>
</table>

