	<%= t('activerecord.models.doc').pluralize.capitalize.html_safe %>
	<%= link_to t('views.shared.full_list'), docs_path, {class: 'button'} -%>
</h1>
<%= render :partial => "docs/sourcedb", collection: @sourcedbs -%>

