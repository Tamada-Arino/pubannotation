<h1>Divisions</h1>

<table>
  <tr>
    <th>Source DB</th>
    <th>Source Id</th>
    <th>Division</th>
    <th>Section</th>
    <th>Text</th>
    <th>Annotation</th>
    <th></th>
  </tr>

<% @docs.each_with_index do |doc, i| %>
  <tr>
    <td><%= doc.sourcedb %></td>
    <td><a href="<%= doc.source %>"><%= doc.sourceid %></a></td>
    <td><%= doc.serial %></td>
    <td><%= doc.section %></td>
    <td class="text"><%= (doc.body.length < 52)? doc.body : doc.body[0, 50] + ' ...' %></td>
    <td style="text-align:right">bionlp-st-2013-ge [
      <%= link_to "table", pmcdoc_div_annset_annotations_url(doc.sourceid, doc.serial, "bionlp-st-2013-ge") %> |
      <%= link_to "json", pmcdoc_div_annset_annotations_url(doc.sourceid, doc.serial, "bionlp-st-2013-ge", :format => :json) %> ]</td>
    <td><%= link_to 'Detail', pmcdoc_div_path(doc.sourceid, doc.serial) %></td>

  </tr>
<% end %>
</table>
